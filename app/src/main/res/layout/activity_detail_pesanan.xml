<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pembelian.pesanan.DetailPesananActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_button"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonAcc"
        android:src="@drawable/ic_baseline_check_24"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Detail Pemesanan"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/ic_photo_camera_black_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/interregular"
        android:gravity="center_horizontal"
        android:text="Anda Belum Melakukan Pembayaran\nHarap Melakukan Melakukan Pembayaran Terlebih Dahulu"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bawah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.105" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bawah"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="1dp"
        android:background="@drawable/background_button_pembelian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <View
            android:id="@+id/view6"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#c4c4c4"
            app:layout_constraintEnd_toEndOf="@id/bawah"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@id/bawah"
            app:layout_constraintTop_toTopOf="@id/bawah" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/interbold"
            android:text="Detail Pesanan"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@id/bawah"
            app:layout_constraintTop_toBottomOf="@+id/view6" />

<!--        <View-->
<!--            android:id="@+id/view8"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:background="#c4c4c4"-->
<!--            app:layout_constraintEnd_toEndOf="@id/bawah"-->
<!--            app:layout_constraintStart_toStartOf="@id/bawah"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/textView20" />-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_produk_pesanan"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/bawah"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#c4c4c4"
            app:layout_constraintEnd_toEndOf="@id/bawah"
            app:layout_constraintStart_toStartOf="@id/bawah"
            app:layout_constraintTop_toBottomOf="@+id/rv_produk_pesanan"
            tools:layout_editor_absoluteX="5dp" />

        <TextView
            android:id="@+id/ringkasan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/interbold"
            android:text="Detail Pesanan"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@id/bawah"
            app:layout_constraintTop_toBottomOf="@+id/view9" />

        <TextView
            android:id="@+id/tv_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/interregular"
            android:text="Subtotal"
            app:layout_constraintStart_toStartOf="@id/bawah"
            app:layout_constraintTop_toBottomOf="@+id/ringkasan" />

        <TextView
            android:id="@+id/tv_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/interregular"
            android:text="Promo"
            app:layout_constraintStart_toStartOf="@id/bawah"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtotal" />

        <TextView
            android:id="@+id/tv_ongkos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/interregular"
            android:text="Ongkos Kirim"
            app:layout_constraintStart_toStartOf="@id/bawah"
            app:layout_constraintTop_toBottomOf="@+id/tv_promo" />

        <TextView
            android:id="@+id/tv_bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/interbold"
            android:text="Harus Dibayar"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/bawah"
            app:layout_constraintTop_toBottomOf="@+id/tv_ongkos" />

        <TextView
            android:id="@+id/tv_isi_subtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="288dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/interregular"
            android:text="Rp 0"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/tv_subtotal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_subtotal"
            app:layout_constraintTop_toTopOf="@+id/tv_subtotal"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_isi_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="312dp"
            android:fontFamily="@font/interregular"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="@+id/tv_promo"
            app:layout_constraintEnd_toEndOf="@+id/tv_isi_subtotal"
            app:layout_constraintStart_toEndOf="@+id/tv_promo"
            app:layout_constraintTop_toTopOf="@+id/tv_promo"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_isi_gratis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="248dp"
            android:fontFamily="@font/interregular"
            android:text="Gratis"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ongkos"
            app:layout_constraintEnd_toEndOf="@+id/tv_isi_promo"
            app:layout_constraintStart_toEndOf="@+id/tv_ongkos"
            app:layout_constraintTop_toTopOf="@+id/tv_ongkos"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_harus_dibayar"
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:fontFamily="@font/interbold"
            android:text="Rp 123"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bayar"
            app:layout_constraintEnd_toEndOf="@+id/tv_isi_gratis"
            app:layout_constraintStart_toEndOf="@+id/tv_bayar"
            app:layout_constraintTop_toTopOf="@+id/tv_bayar"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>