<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#C4C4C4"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/img_pembelian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/nama_pembelian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="78dp"
            android:text="Nama produk"
            android:textColor="@color/black"
            android:fontFamily="@font/interregular"
            app:layout_constraintEnd_toEndOf="@+id/img_pembelian"
            app:layout_constraintStart_toStartOf="@+id/img_pembelian"
            app:layout_constraintTop_toTopOf="@+id/img_pembelian" />

        <TextView
            android:id="@+id/price_pembelian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 0"
            android:textColor="@color/black"
            android:fontFamily="@font/interregular"
            app:layout_constraintEnd_toEndOf="@+id/nama_pembelian"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/nama_pembelian"
            app:layout_constraintTop_toBottomOf="@+id/nama_pembelian" />

        <TextView
            android:id="@+id/beli_produk_pembelian"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Beli"
            android:textColor="@color/black"
            android:fontFamily="@font/interregular"
            android:gravity="center"
            android:background="@drawable/background_button_pembelian"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/price_pembelian"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="@+id/price_pembelian"
            app:layout_constraintTop_toBottomOf="@+id/price_pembelian" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>