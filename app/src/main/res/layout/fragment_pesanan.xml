<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pembelian.pesanan.PesananFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_pesanan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_pemesanan"/>

    <ProgressBar
        android:id="@+id/progressbar_pesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview_pesanan"
        app:layout_constraintEnd_toEndOf="@+id/recyclerview_pesanan"
        app:layout_constraintStart_toStartOf="@+id/recyclerview_pesanan"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_pesanan" />
    <TextView
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="@color/black"
        android:text="Tidak Ada Pesanan"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview_pesanan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_pesanan" />
</androidx.constraintlayout.widget.ConstraintLayout>