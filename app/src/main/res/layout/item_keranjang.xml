<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <CheckBox
        android:id="@+id/checkbox_keranjang"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_produk"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkbox_keranjang"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama_produk_keranjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/interregular"
        android:text="Nama Produk"
        app:layout_constraintStart_toEndOf="@+id/img_produk"
        app:layout_constraintTop_toTopOf="@+id/img_produk" />

    <TextView
        android:id="@+id/tv_price_keranjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/interregular"
        android:text="Rp 0"
        app:layout_constraintBottom_toBottomOf="@+id/img_produk"
        app:layout_constraintStart_toEndOf="@+id/img_produk"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_produk_keranjang"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_entity_keranjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp"
        android:paddingHorizontal="10dp"
        android:fontFamily="@font/interregular"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price_keranjang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toEndOf="@+id/tv_price_keranjang"
        app:layout_constraintTop_toTopOf="@+id/tv_nama_produk_keranjang"
        app:layout_constraintVertical_bias="0.266" />

    <ImageButton
        android:id="@+id/tambahsatucart"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/background_btn_cart"
        android:src="@drawable/ic_baseline_add_24"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/tv_entity_keranjang"
        app:layout_constraintEnd_toStartOf="@+id/tv_entity_keranjang"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_nama_produk_keranjang"
        app:layout_constraintTop_toTopOf="@+id/tv_entity_keranjang"
        app:layout_constraintVertical_bias="0.454" />

    <ImageButton
        android:id="@+id/kurangsatucart"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/background_btn_cart"
        android:src="@drawable/ic_baseline_remove_24"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/tv_entity_keranjang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_entity_keranjang"
        app:layout_constraintTop_toTopOf="@+id/tv_entity_keranjang"
        app:layout_constraintVertical_bias="0.454" />

</androidx.constraintlayout.widget.ConstraintLayout>