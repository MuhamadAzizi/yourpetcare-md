<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollIndicators="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".artikel.artikel.ArtikelDetailActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/img_detail_berita"
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:src="@drawable/ic_baseline_image_24"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/tv_berita_detail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/background_button"
          android:fontFamily="@font/interregular"
          android:padding="10dp"
          android:text="Judul Berita"
          android:textColor="@color/black"
          android:textSize="17sp"
          android:textStyle="bold"
          app:layout_constraintBottom_toBottomOf="@+id/img_detail_berita"
          app:layout_constraintEnd_toEndOf="@+id/img_detail_berita"
          app:layout_constraintHorizontal_bias="0.498"
          app:layout_constraintStart_toStartOf="@+id/img_detail_berita"
          app:layout_constraintTop_toTopOf="@+id/img_detail_berita"
          app:layout_constraintVertical_bias="0.897" />

      <TextView
          android:id="@+id/tv_deskripsi_detail_berita"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/interregular"
          android:layout_marginHorizontal="20dp"
          android:layout_marginVertical="20dp"
          android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
          android:layout_marginTop="44dp"
          app:layout_constraintEnd_toEndOf="@+id/img_detail_berita"
          app:layout_constraintStart_toStartOf="@+id/img_detail_berita"
          app:layout_constraintTop_toBottomOf="@+id/img_detail_berita" />

      <TextView
          android:id="@+id/textView5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="20dp"
          android:padding="10dp"
          android:text="Berita Lainnya"
          android:textColor="@color/black"
          android:textSize="17sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="@+id/tv_deskripsi_detail_berita"
          app:layout_constraintStart_toStartOf="@+id/tv_deskripsi_detail_berita"
          app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi_detail_berita" />

      <ProgressBar
          android:id="@+id/progressbar_detail_artikel"
          android:visibility="gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="@+id/recyclerview_detail_berita"
          app:layout_constraintEnd_toEndOf="@+id/recyclerview_detail_berita"
          app:layout_constraintStart_toStartOf="@+id/recyclerview_detail_berita"
          app:layout_constraintTop_toBottomOf="@+id/recyclerview_detail_berita" />


      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recyclerview_detail_berita"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:scrollIndicators="none"
          app:layout_constraintEnd_toEndOf="@+id/textView5"
          app:layout_constraintStart_toStartOf="@+id/textView5"
          app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>

