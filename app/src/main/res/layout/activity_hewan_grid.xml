<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".artikel.hewan.HewanGridActivity">

    <ProgressBar
        android:id="@+id/progressbar_hewan"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview_hewan_grid"
        app:layout_constraintEnd_toEndOf="@+id/recyclerview_hewan_grid"
        app:layout_constraintStart_toStartOf="@+id/recyclerview_hewan_grid"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_hewan_grid" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_hewan_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>